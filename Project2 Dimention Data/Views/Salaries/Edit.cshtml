@model Project2_Dimention_Data.Models.Entities.Salary

@{
    ViewData["Title"] = "Edit";
}
<div class="container">
    <h1>Edit</h1>

    <h4>Salary</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="EmpNumber" class="control-label"></label>
                    <select asp-for="EmpNumber" class="form-control" asp-items="ViewBag.EmpNumber"></select>
                    <span asp-validation-for="EmpNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MonthlyIncome" class="control-label"></label>
                    <input asp-for="MonthlyIncome" class="form-control" />
                    <span asp-validation-for="MonthlyIncome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PercentSalaryHike" class="control-label"></label>
                    <input asp-for="PercentSalaryHike" class="form-control" />
                    <span asp-validation-for="PercentSalaryHike" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="SalaryId" />
                <div class="form-group">
                    <input type="submit" value="Save" class="btn text-light bg-dark" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a class="nav-link text-dark" asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
    </div>
