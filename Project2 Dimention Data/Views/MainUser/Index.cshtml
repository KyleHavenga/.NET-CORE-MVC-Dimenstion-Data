@model IEnumerable<Project2_Dimention_Data.Models.Entities.PrimaryTable>
@inject Project2_Dimention_Data.Services.Authenticate AuthenticationService

@{
    ViewData["Title"] = "Index";
}

@{
    var authInfo = AuthenticationService.ScopeAuthInfo;
}
<div class="container">
<h1>Employee Details</h1>

<p>
    <a class="link text-dark" asp-action="Create">Create New</a>
</p>
<table class="table  .table-striped .table-xl">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EmpNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaritalStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Over18)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumCompaniesWorked)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumWorkingYears)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DistanceFromHome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Education)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EducationField)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            @if (item.EmpNumber == authInfo.EmpNum && authInfo.UserRole == "User")
            {
        <tr>
            
            <td>
                @Html.DisplayFor(modelItem => item.MaritalStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Over18)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumCompaniesWorked)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumWorkingYears)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DistanceFromHome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Education)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EducationField)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                <a class="link text-dark" asp-action="Edit" asp-route-id="@item.EmpNumber">Edit</a> |
                <a class="link text-dark" asp-action="Details" asp-route-id="@item.EmpNumber">Details</a> |
                <a class="link text-dark" asp-action="Delete" asp-route-id="@item.EmpNumber">Delete</a>
            </td>
        </tr>
            }
            @if (authInfo.UserRole == "Admin")
            {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.EmpNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaritalStatus)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Age)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Over18)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumCompaniesWorked)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumWorkingYears)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DistanceFromHome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Education)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EducationField)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Gender)
        </td>
        <td>
            <a class="link text-dark" asp-action="Edit" asp-route-id="@item.EmpNumber">Edit</a> |
            <a class="link text-dark" asp-action="Details" asp-route-id="@item.EmpNumber">Details</a> |
            <a class="link text-dark" asp-action="Delete" asp-route-id="@item.EmpNumber">Delete</a>
        </td>
    </tr>
            }
        }
    </tbody>
</table>
    </div>
